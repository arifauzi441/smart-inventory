<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cashier - Input</title>
    <link rel="icon" href="/images/logo.png">
    <link rel="stylesheet" href="/stylesheets/pembelian.css">
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
</head>
<body>
    
    <nav>
        <div class="nav_header">
        <div class="nav_logo">
            <a href="/">
            <img src="/images/logo.png" alt="logo" />
            </a>
            <span class="judul">VendorVault </span>
            <div class="separator"></div>
            <div class="dash"><a href="/cashier/dashboard">Dashboard</a></div>
            <div class="List"><a href="/cashier/POS">Pembelian</a></div>
        </div>
        </div>
        <ul class="nav_links">
        <li>Kasir</li>
        <li><a href="/logout"><i class='bx bx-log-out-circle bx-flip-horizontal'></i></a></li>
        </ul>
    </nav>
    
    <section class="card">

        <div class="card-out">

            <div class="card-body">

                <div class="navi-isi">
                    <span class="cas-jdl">Cashier</span>
                    
                    <div class="pp">
                        <span class="nm-cas"><%= user.username %></span>
                        <a class="pp-cas"><i class='bx bxs-user-circle'></i></a>
                    </div>
                </div>

                <div class="isi-beli">

                    <div class="bgn-kiri">
                        <div class="bckg-kiri">

                            <form action="/cashier/transaction" method="post">
                                <input type="hidden" value="<%= user.id_user %>" name="id_user">

                                <div class="form-atas"> </div>

                                <div class="form-bawah">
                                    <div class="bgn-bayar">
                                        <div class="isi-total-atas">
                                            <div class="total-isi">
                                                <span class="jdl-ttl">Total :</span>
                                                <span class="hrg-total">Rp 0</span>
                                                <input class="hrg-total-price" type="hidden" name="total_price">
                                            </div>
                                            
                                            <span class="jdl-bayar">Bayar :</span>
                                        </div>

                                        <div class="isi-total-bawah">
                                            <div class="total-jmlh">
                                                <span class="jdl-jmlh">Jumlah Barang :</span>
                                                <span class="jmlh-brg">0</span>
                                            </div>
                                            
                                            <input class="inp-byr" type="number" placeholder="Bayar" min="0" name="payment" required>
                                        </div>
                                    </div>

                                    <input type="hidden" class="event-select" name="transaction_event" value="none">

                                    <div class="bgn-tombol">
                                        <button type="submit" disabled>Payment <i class='bx bx-chevron-right' ></i></button>
                                    </div>
                                </div>

                            </form>

                        </div>

                        <div class="rekemendasi">
                            <span class="judul-rekom">Rekomendasi Produk</span>
                            <ul>
                                <li>Shampo</li>
                            </ul>
                        </div>

                    </div>


                    <div class="bgn-kanan">

                        <div class="search-container">

                            <div class="select-menu">
                                <div class="select-btn">
                                    <span class="sBtn-text">Select your event</span>
                                    <i class="bx bx-chevron-down"></i>
                                </div>
                                <ul class="options">
                                    <li class="option">
                                        <i class="bx bx-border-none" style="color: #171515;"></i>
                                        <span class="option-text">None</span>
                                    </li>
                                    <li class="option">
                                        <i class="bx bxs-moon" style="color: #dbc221;"></i>
                                        <span class="option-text">Ramadhan</span>
                                    </li>
                                    <li class="option">
                                        <i class="bx bxs-castle" style="color: #bf1717;"></i>
                                        <span class="option-text">Imlek</span>
                                    </li>
                                    <li class="option">
                                        <i class="bx bxs-tree" style="color: #145002;"></i>
                                        <span class="option-text">Natal</span>
                                    </li>
                                    <li class="option">
                                        <i class="bx bxs-heart" style="color: #E1306C;"></i>
                                        <span class="option-text">Valentine</span>
                                    </li>
                                    <li class="option">
                                        <i class="bx bxs-flag-alt" style="color: #bcb8b8;"></i>
                                        <span class="option-text">Kemerdekaan</span>
                                    </li>                                    
                                    <li class="option">
                                        <i class="bx bxs-calendar" style="color: #04120f;"></i>
                                        <span class="option-text">Tahun Baru</span>
                                    </li>
                                </ul>
                            </div>

                            <div class="search-box">
                                <i class='bx bx-search icon'></i>
                                <input type="text" id="searchInput" placeholder="Search.." />
                            </div>
                        </div>

                        <div class="cont-brg">
                            <% for( let i = 0; i < product.length; i++ ) { %>
                                <div class="kotak">
                                    <div class="cont-gmbr">
                                        <img src="<%= product[i].product_image %>" alt="gambar-produk">
                                    </div>
    
                                    <div class="keterangan">
                                        <span class="ket-jdl"><%= product[i].product_name %></span>
                                        <span class="ket-hrg"><%= product[i].product_price %></span>
                                        <input type="hidden" class="stock" value="<%= product[i].product_stock %>">
                                        <input type="hidden" class="rekom-name" value="<%= product[i].pair %>">
                                        <input type="hidden" class="ket-id" value="<%= product[i].product_id %>">
                                    </div>
                                </div>
                            <% } %>

                        </div>

                    </div>

                </div>


        </div>
        </div>


        
    </section>

    <script src="/javascripts/pembelian.js"></script>
</body>
</html>